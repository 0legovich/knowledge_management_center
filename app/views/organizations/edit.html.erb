<div class="container">
  <h1 class="h1">Редактирование организации</h1>
  <div class="row">
    <div class="col-md-6">
      <%= simple_form_for @organization do |f| %>
          <%= f.input :full_name %>
          <%= f.input :short_name %>
          <%= f.input :address %>
          <%= f.button :submit, "Обновить", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>