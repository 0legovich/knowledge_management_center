<h2>Вход</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.input :email %>

    <%= f.input :password %>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

    <%= f.button :submit, "Войти", class: "btn btn-primary"  %>
<% end %>

<%= render "users/shared/links" %>
