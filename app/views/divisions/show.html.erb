<div class="container">
  <div class="row">
    <div class="col-md-6">
      # Фото подразделения
    </div>
    <div class="col-md-6">
      <h1 class="h1"><%= @division.name %></h1>
      <h4>Наименование: <%= @division.name %></h4>
      <h4>Организация: <%= @division.organization.name %></h4>
      <%= link_to "Редактировать", edit_division_path(@division), class: "btn btn-primary" %>
    </div>
  </div>
  <div class="row buffer-both">
    <div class="col-md-12">
      <h3 class="h3">Обучающиеся</h3>
    </div>
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>№</th>
          <th>Ф.И.О.</th>
          <th>Дата рождения</th>
          <th>Email</th>
          <th>Роль</th>
        </tr>
        </thead>
        <tbody>
        <%= render partial: 'users/user', collection: @learners %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row buffer-both">
    <div class="col-md-12">
      <h3 class="h3">Преподаватели</h3>
    </div>
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>№</th>
          <th>Ф.И.О.</th>
          <th>Дата рождения</th>
          <th>Email</th>
          <th>Роль</th>
        </tr>
        </thead>
        <tbody>
        <%= render partial: 'users/user', collection: @teachers %>
        </tbody>
      </table>
    </div>
  </div>
</div>