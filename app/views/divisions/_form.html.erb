<%= simple_form_for @division do |f| %>
    <% if params[:organization].blank? %>
        <%= f.association :organization, as: :select, include_blank: false %>
    <% else %>
        <%= f.association :organization, selected: Organization.find(params[:organization]).id, disabled: true, include_blank: false %>
    <% end %>
    <%= f.input :name %>
    <%= f.button :submit, "Создать", class: "btn btn-primary" %>
<% end %>